<?xml version="1.0" encoding="utf-8"?>
<!-- Matches WebView ticker-card style: glass card with gradient accent -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp">

    <!-- Card Background -->
    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/card_background"
        android:foreground="?android:attr/selectableItemBackground">

        <!-- Top Accent Line -->
        <View
            android:id="@+id/accentLine"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/gradient_accent"
            android:visibility="gone" />

        <!-- Symbol Name -->
        <TextView
            android:id="@+id/symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTCUSDT"
            android:textColor="#8b949e"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium" />

        <!-- Price Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <!-- Price -->
            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$45,000.00"
                android:textColor="#f0f6fc"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Change Badge -->
            <TextView
                android:id="@+id/change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/change_badge_up"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="+5.00%"
                android:textColor="#00d68f"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <!-- Alert Bell Button (Top Right) -->
    <ImageButton
        android:id="@+id/btnAlert"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:layout_margin="4dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_popup_reminder"
        android:tint="#8b949e"
        android:contentDescription="Alert" />

</FrameLayout>
