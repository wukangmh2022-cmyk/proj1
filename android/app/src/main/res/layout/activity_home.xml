<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d1117"
    android:orientation="vertical">

    <!-- Header (matches WebView .header style) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <!-- Title with gradient text effect (simulated with gold color) -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="å®žæ—¶"
            android:textColor="#fcd535"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Header Actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Edit Button -->
            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/btn_secondary"
                android:text="ç¼–è¾‘"
                android:textColor="#f0f6fc"
                android:textSize="13sp"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="8dp" />

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/btn_secondary"
                android:src="@android:drawable/ic_menu_preferences"
                android:tint="#f0f6fc"
                android:contentDescription="Settings" />
        </LinearLayout>
    </LinearLayout>

    <!-- Add Symbol Input Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <EditText
            android:id="@+id/inputSymbol"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/input_background"
            android:hint="æ·»åŠ äº¤æ˜“å¯¹ (å¦‚ BTC)"
            android:textColorHint="#8b949e"
            android:textColor="#f0f6fc"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:inputType="textCapCharacters"
            android:imeOptions="actionDone"
            android:maxLines="1" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/btn_primary"
            android:text="æ·»åŠ "
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingHorizontal="20dp" />
    </LinearLayout>

    <!-- Symbol List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="100dp" />

    <!-- Floating Controls (matches WebView .floating-controls) -->
    <LinearLayout
        android:id="@+id/floatingControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnFloatingToggle"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/btn_primary"
            android:text="ðŸ”² å¼€å¯æ‚¬æµ®çª—"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnOpenSettings"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_secondary"
            android:text="âš™ è®¾ç½®"
            android:textColor="#f0f6fc"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
